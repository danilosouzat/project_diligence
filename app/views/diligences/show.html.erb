<%- model_class = Diligence -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @diligence.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:corpo) %>:</strong></dt>
  <dd><%= @diligence.corpo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @diligence.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_inicio) %>:</strong></dt>
  <dd><%= @diligence.data_inicio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_fim) %>:</strong></dt>
  <dd><%= @diligence.data_fim %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              diligences_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_diligence_path(@diligence), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              diligence_path(@diligence),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
