<%= form_for @diligence, :html => { :class => "form-horizontal diligence" } do |f| %>

  <% if @diligence.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@diligence.errors.count, "error") %> prohibited this diligence from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @diligence.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:titulo) %>
  </div>
  <div class="form-group">
    <%= f.label :corpo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :corpo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:corpo) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :data_inicio, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data_inicio, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_inicio) %>
  </div>
  <div class="form-group">
    <%= f.label :data_fim, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :data_fim, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data_fim) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                diligences_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
